{
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "rootDir": "../../",
    "roots": [
        "<rootDir>/src",
        "<rootDir>/tests"
    ],
    "moduleFileExtensions": [
        "ts",
        "json",
        "tsx",
        "js",
        "jsx"
    ],
    "testRegex": "[a-z]+\\.test\\.(tsx?|js)$",
    "transform": {
        "\\.tsx?$": "<rootDir>/config/jest/transformers/typescript.js",
        "\\.js$": "<rootDir>/config/jest/transformers/javascript.js"
      }
}